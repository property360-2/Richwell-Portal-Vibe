{
  "name": "richwell-portal-backend",
  "version": "1.0.0",
  "description": "Backend for Richwell College Portal",
  "type": "module",
  "main": "src/server.js",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "analytics:smoke": "node scripts/analyticsSmoke.js",
    "postdeploy": "npm run analytics:smoke",
  "test": "jest --testPathPatterns=tests --detectOpenHandles",
    "test:watch": "jest --testPathPattern=tests --watch --detectOpenHandles",
    "test:coverage": "jest --testPathPattern=tests --coverage --detectOpenHandles",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "education",
    "school",
    "portal",
    "enrollment",
    "grades"
  ],
  "author": "Richwell College Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "nodemon": "^3.1.4",
    "prisma": "^6.18.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
